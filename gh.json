{
  "identifier": "github-tool",
  "meta": {
    "title": "GitHub Tool",
    "description": "Retrieve directory and sub-directory structure and content of a file directly from a GitHub repository and create, update, or delete files in a GitHub repository.",
    "avatar": "üêô"
  },
  "settings": {
    "type": "object",
    "properties": {
      "apiKey": {
        "type": "string",
        "title": "API Key",
        "description": "Enter your API key for api.chat.buxo.ca",
        "format": "password",
        "required": true
      }
    }
  },
  "api": [
    {
      "name": "getRepositoryTree",
      "url": "https://api.chat.buxo.ca/api/github/repositories/tree",
      "description": "Retrieve the file and directory structure of a GitHub repository.",
      "authentication": {
        "type": "bearer",
        "settingKey": "apiKey"
      },
      "parameters": {
        "type": "object",
        "properties": {
          "repository_url": {
            "type": "string",
            "description": "URL of the repository",
            "example": "https://github.com/username/repo"
          },
          "repository_path": {
            "type": "string",
            "description": "Path within the repository",
            "example": "src/"
          },
          "repository_branch": {
            "type": "string",
            "description": "Reference to a specific branch or commit",
            "example": "main"
          }
        },
        "required": ["repository_url"]
      }
    },
    {
      "name": "readFile",
      "url": "https://api.chat.buxo.ca/api/github/repositories/files/read",
      "description": "Fetch content of a file from a GitHub repository.",
      "authentication": {
        "type": "bearer",
        "settingKey": "apiKey"
      },
      "parameters": {
        "type": "object",
        "properties": {
          "repository_url": {
            "type": "string",
            "description": "URL of the repository"
          },
          "repository_file_path": {
            "type": "string",
            "description": "Path to the file within the repository"
          },
          "repository_branch": {
            "type": "string",
            "description": "Branch or commit reference"
          }
        },
        "required": ["repository_url", "repository_file_path"]
      }
    },
    {
      "name": "createFile",
      "url": "https://api.chat.buxo.ca/api/github/repositories/files/create",
      "description": "Create a new file in a GitHub repository.",
      "authentication": {
        "type": "bearer",
        "settingKey": "apiKey"
      },
      "parameters": {
        "type": "object",
        "properties": {
          "repository_url": {
            "type": "string",
            "description": "URL of the repository"
          },
          "repository_file_path": {
            "type": "string",
            "description": "Path where the file should be created"
          },
          "file_content": {
            "type": "string",
            "description": "Content of the file to be created"
          },
          "commit_message": {
            "type": "string",
            "description": "Commit message for the file creation"
          },
          "repository_branch": {
            "type": "string",
            "description": "Branch where the file should be created"
          }
        },
        "required": ["repository_url", "repository_file_path", "file_content", "commit_message"]
      }
    },
    {
      "name": "updateFile",
      "url": "https://api.chat.buxo.ca/api/github/repositories/files/update",
      "description": "Update an existing file in a GitHub repository.",
      "authentication": {
        "type": "bearer",
        "settingKey": "apiKey"
      },
      "parameters": {
        "type": "object",
        "properties": {
          "repository_url": {
            "type": "string",
            "description": "URL of the repository"
          },
          "repository_file_path": {
            "type": "string",
            "description": "Path of the file to be updated"
          },
          "file_content": {
            "type": "string",
            "description": "New content for the file"
          },
          "commit_message": {
            "type": "string",
            "description": "Commit message for the update"
          },
          "repository_branch": {
            "type": "string",
            "description": "Branch where the file should be updated"
          }
        },
        "required": ["repository_url", "repository_file_path", "file_content", "commit_message"]
      }
    },
    {
      "name": "deleteFile",
      "url": "https://api.chat.buxo.ca/api/github/repositories/files/delete",
      "description": "Delete a file from a GitHub repository.",
      "authentication": {
        "type": "bearer",
        "settingKey": "apiKey"
      },
      "parameters": {
        "type": "object",
        "properties": {
          "repository_url": {
            "type": "string",
            "description": "URL of the repository"
          },
          "repository_file_path": {
            "type": "string",
            "description": "Path of the file to be deleted"
          },
          "commit_message": {
            "type": "string",
            "description": "Commit message for the deletion"
          },
          "repository_branch": {
            "type": "string",
            "description": "Branch where the file should be deleted"
          }
        },
        "required": ["repository_url", "repository_file_path", "commit_message"]
      }
    },
    {
      "name": "createRepository",
      "url": "https://api.chat.buxo.ca/api/github/create",
      "description": "Create a new private GitHub repository.",
      "authentication": {
        "type": "bearer",
        "settingKey": "apiKey"
      },
      "parameters": {
        "type": "object",
        "properties": {
          "repository_name": {
            "type": "string",
            "description": "Name of the repository to be created"
          },
          "repository_description": {
            "type": "string",
            "description": "Description of the repository"
          }
        },
        "required": ["repository_name", "repository_description"]
      }
    }
  ],
  "version": "1.0.0",
  "systemRole": "I am a GitHub Tool that can help you manage GitHub repositories. I can retrieve directory structures, read file contents, create/update/delete files, and create new repositories.",
  "type": "default",
  "gateway": "https://api.chat.buxo.ca"
}
